    void saveALL_v1() {

        FileOutputStream plik = null;
        try {
            plik = new FileOutputStream("zapis1.txt");
            BufferedOutputStream bufor = new BufferedOutputStream(plik);
            DataOutputStream dane = new DataOutputStream(bufor);

            for (int i = 0; i < TMyModel.getTab().size(); i++) {
                if (TMyModel.getTab().get(i).getClass() == TGift.class) {
                    TGift g = (TGift) TMyModel.getTab().get(i);

                    dane.writeChars(g.getGiftName());
                    dane.writeChars(g.getForWho());
                    dane.writeDouble(g.getPrize());
                    dane.writeInt(g.getWeight());

                } else {
                    TGood g = (TGood) TMyModel.getTab().get(i);

                    dane.writeInt(g.getSizeX());
                    dane.writeInt(g.getSizeY());
                    dane.writeInt(g.getSizeZ());
                }
            }

            dane.close();
        } catch (Exception ex) {
            Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            try {

                plik.close();
            } catch (IOException ex) {
                Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }

    ArrayList<TValue> loadAll_v2() {
        ArrayList<TValue> t = null;
        FileInputStream p2 = null;
        try {

            p2 = new FileInputStream("zapis2.txt");
            ObjectInputStream s = new ObjectInputStream(p2);
            t = (ArrayList<TValue>) s.readObject();

        } catch (Exception ex) {
            Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            try {
                p2.close();
            } catch (IOException ex) {
                Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
        }

        return t;
    }

    void saveALL_v2(Object abc) {

        FileOutputStream p1 = null;
        try {
            p1 = new FileOutputStream("zapis2.txt");
            ObjectOutputStream s = new ObjectOutputStream(p1);
            s.writeObject(abc);
            s.close();

        } catch (Exception ex) {
            Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
        } finally {
            try {
                p1.close();
            } catch (Exception ex) {
                Logger.getLogger(MainFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
        }

    }

